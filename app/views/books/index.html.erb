<% if flash[:notice] %>
  <p><%= flash[:notice]  %></p>
<% end %>

<h3>Books</h3>

<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
            <%= link_to "Show", book_path(book.id) %>
            <%= link_to "Edit", edit_book_path(book.id) %>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
    </tr>
    <% end %>
</table>

<%= render "new" %>